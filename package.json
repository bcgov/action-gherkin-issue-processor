{
  "name": "action-gherkin-issue-processor",
  "description": "GitHub Action that processes Gherkin content from issues and turn them into a content that can be then saved into a file",
  "version": "0.0.1",
  "author": "Government of British Columbia Natual Resources",
  "private": false,
  "homepage": "https://github.com/bcgov-nr/action-gherkin-issue-processor",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov-nr/action-gherkin-issue-processor.git"
  },
  "bugs": {
    "url": "https://github.com/bcgov-nr/action-gherkin-issue-processor/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=21"
  },
  "type": "module",
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "badge": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts -o dist --source-map --license LICENSE",
    "package:watch": "npm run package -- --watch",
    "coverage": "vitest run --coverage",
    "coverage:watch": "vitest --coverage",
    "postcoverage": "npm run badge",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "all": "npm run format:write && npm run lint && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@octokit/rest": "^21.0.2",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-istanbul": "^2.1.1",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vitest": "^0.5.4",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.5.4",
    "vitest": "^2.1.1"
  }
}
